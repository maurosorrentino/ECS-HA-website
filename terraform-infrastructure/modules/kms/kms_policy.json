{
  "Version": "2012-10-17",
  "Id": "restrict-kms-key-usage-to-admin",
  "Statement": [
    {
      "Sid": "AllowAdminKeyManagement",
      "Effect": "Allow",
      "Principal": {
        "AWS": [
          "arn:aws:iam::${account_id}:role/devGitHubActionsProjectNameRole",
          "arn:aws:iam::${account_id}:root"
        ]
      },
      "Action": [
        "kms:*"
      ],
      "Resource": "*"
    }
  ]
}
